{
  "name": "gate1-agent-v2",
  "version": "2.0.0",
  "private": true,
  "description": "Gate 1 System Desktop Agent v2 (Windows-first)",
  "main": "dist/main.js",
  "scripts": {
    "build:main": "tsc -p tsconfig.json",
    "build:renderer": "npm --prefix renderer run build",
    "build": "npm run build:main && npm run build:renderer",
    "dev:renderer": "npm --prefix renderer run dev",
    "dev:electron": "npm run build:main && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "dev:mascot": "npm run build:main && cross-env FORCE_FLOATING_MASCOT=1 VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "dev": "concurrently -k \"npm run dev:renderer\" \"wait-on http://localhost:5173 && npm run dev:electron\"",
    "start": "electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win nsis"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^35.7.5",
    "electron-builder": "^24.13.3",
    "typescript": "^5.4.5",
    "wait-on": "^8.0.2"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "chokidar": "^3.6.0",
    "electron-store": "^8.1.0",
    "ffprobe-static": "^3.1.0",
    "keytar": "^7.9.0",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.neliumsystems.gate1.agent.v2",
    "productName": "Gate 1 Agent",
    "copyright": "Copyright Â© Nelium Systems",
    "artifactName": "${productName}-Setup-${version}-${arch}.${ext}",
    "publisherName": "Nelium Systems",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "Nelium Systems",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "menuCategory": "Nelium Systems\\Gate 1",
      "shortcutName": "Gate 1 Agent",
      "uninstallDisplayName": "Gate 1 Agent",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeader": "build/installerHeader.bmp",
      "installerSidebar": "build/installerSidebar.bmp",
      "runAfterFinish": true,
      "runAfterFinishOnInstall": true,
      "license": "build/license.txt",
      "include": "build/installer.nsh"
    }
  }
}
