{
  "name": "gate1-agent",
  "version": "1.0.0",
  "description": "Gate 1 System Desktop Agent for Editors",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "package": "electron-packager . \"Gate 1 Agent\" --platform=win32 --arch=x64 --out=release --overwrite --asar"
  },
  "author": "Gate 1 System",
  "license": "UNLICENSED",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2",
    "electron-winstaller": "^5.4.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "chokidar": "^3.5.3",
    "crypto-js": "^4.2.0",
    "drivelist": "^11.1.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "org.gate1system.agent",
    "productName": "Gate 1 Agent",
    "copyright": "Copyright 2024 Gate 1 System",
    "directories": {
      "output": "build",
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "squirrel",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "Gate1Agent-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Gate 1 Agent",
      "runAfterFinish": true,
      "license": "LICENSE.txt"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Office"
    }
  }
}
